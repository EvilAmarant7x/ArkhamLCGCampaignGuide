<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/dialog_screen_bg"
              android:orientation="vertical"
              android:padding="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/investigator_weaknesses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:text="@string/investigator_weaknesses"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textScaleX="1.2"
        android:textSize="20sp"/>

    <CheckBox
        android:id="@+id/investigator_one_weakness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:button="@drawable/checkbox_style"
        android:paddingBottom="@dimen/checkbox_padding"
        android:paddingTop="@dimen/checkbox_padding"
        android:textColor="@android:color/black"
        android:textSize="@dimen/arnopro_textsize"
        android:visibility="gone"/>

    <CheckBox
        android:id="@+id/investigator_two_weakness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:button="@drawable/checkbox_style"
        android:paddingBottom="@dimen/checkbox_padding"
        android:paddingTop="@dimen/checkbox_padding"
        android:textColor="@android:color/black"
        android:textSize="@dimen/arnopro_textsize"
        android:visibility="gone"/>

    <CheckBox
        android:id="@+id/investigator_three_weakness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:button="@drawable/checkbox_style"
        android:paddingBottom="@dimen/checkbox_padding"
        android:paddingTop="@dimen/checkbox_padding"
        android:textColor="@android:color/black"
        android:textSize="@dimen/arnopro_textsize"
        android:visibility="gone"/>

    <CheckBox
        android:id="@+id/investigator_four_weakness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:button="@drawable/checkbox_style"
        android:paddingBottom="@dimen/checkbox_padding"
        android:paddingTop="@dimen/checkbox_padding"
        android:textColor="@android:color/black"
        android:textSize="@dimen/arnopro_textsize"
        android:visibility="gone"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:background="@drawable/button_style"
            android:includeFontPadding="false"
            android:text="@string/cancel"
            android:textColor="@android:color/black"
            android:textScaleX="1.2"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/okay_button"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/button_style"
            android:includeFontPadding="false"
            android:text="@string/okay"
            android:textColor="@android:color/black"
            android:textScaleX="1.2"
            android:textSize="18sp"/>
    </RelativeLayout>
</LinearLayout>
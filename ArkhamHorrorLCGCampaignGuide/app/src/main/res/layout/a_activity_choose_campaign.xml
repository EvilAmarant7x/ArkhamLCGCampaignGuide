<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_menu_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_vertical_margin">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:contentDescription="@string/app_name"
            android:src="@drawable/main_menu_icon"/>

        <Button
            android:id="@+id/night_button"
            android:layout_width="240dp"
            android:layout_height="55dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/button_style"
            android:text="@string/night_campaign"
            android:textColor="@color/colorNight"
            android:textScaleX="1.2"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/dunwich_button"
            android:layout_width="240dp"
            android:layout_height="55dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/button_style"
            android:text="@string/dunwich_campaign"
            android:textColor="@color/colorDunwich"
            android:textScaleX="1.2"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/carcosa_button"
            android:layout_width="240dp"
            android:layout_height="55dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/button_style"
            android:text="@string/carcosa_campaign"
            android:textColor="@color/colorCarcosa"
            android:textScaleX="1.2"
            android:textSize="20sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/back_button"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:background="@drawable/button_style"
        android:text="@string/back"
        android:textColor="@android:color/black"
        android:textScaleX="1.2"
        android:textSize="18sp"
        android:includeFontPadding="false"/>
</RelativeLayout>